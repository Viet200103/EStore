@page "/orderdetails/details"
@using EStore.Business.DTOs
@using EStore.Business.Services.IServices
@using Microsoft.EntityFrameworkCore
@using EStore.Data.Models
@inject IOrderDetailService OrderDetailService 
@inject NavigationManager NavigationManager

<PageTitle>Profile</PageTitle>

<h1>Profile</h1>

<div>
    <h2>OrderDetail</h2>
    <hr />
    @if (orderdetail is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">OrderId</dt>
            <dd class="col-sm-10">@orderdetail.OrderId</dd>
            <dt class="col-sm-2">ProductId</dt>
            <dd class="col-sm-10">@orderdetail.ProductName</dd>
            <dt class="col-sm-2">UnitPrice</dt>
            <dd class="col-sm-10">@orderdetail.UnitPrice</dd>
            <dt class="col-sm-2">Quantity</dt>
            <dd class="col-sm-10">@orderdetail.Quantity</dd>
            <dt class="col-sm-2">Discount</dt>
            <dd class="col-sm-10">@orderdetail.Discount</dd>
        </dl>
        <div>
            <a href="@($"/orderdetails/edit?orderdetailid={orderdetail.OrderDetailId}")">Edit</a> |
            <a href="@($"/orderdetails")">Back to List</a>
        </div>
    }
</div>

@code {
    private OrderDetailDTO? orderdetail;

    [SupplyParameterFromQuery]
    public int OrderDetailId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        orderdetail = await OrderDetailService.GetOrderDetailByIdAsync(OrderDetailId);

        if (orderdetail is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
